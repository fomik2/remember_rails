<h1>Question#view</h1>
<p>Актуальные вопросы нас сегодня</p>
<% @questions.each do |question| %>
<div>
  <p>
    <%= question.question %>
    <%= link_to 'Удалить', question_path(question), method: :delete %> 
  </p>
  <p>
    <%= question.text %>
  </p>
  <p>
    <%= question.like %>
    <%= question.dislike %>
  </p>
</div>
<% end %>
<%= form_for :question, url: question_index_path do |f| %>
  <p>
    <%= f.label :title %></br>
    <%= f.text_field :question %>
  </p>

  <p>
    <%= f.label :text %></br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit %>
  </p>
  <% end %>
